---
interface Props {
  text: string;
  svg?: string;
  link?: string;
}

const { text, svg, link } = Astro.props;
---

<button
  class="relative inline-flex items-center justify-center p-[0.150rem] overflow-hidden text-sm font-medium  rounded-lg group bg-gradient-to-br gradient-tag text-blue-900 dark:text-white"
>
  <a
    class="flex items-center justify-center md:px-[0.8rem] sm:px-4 md:w-auto w-[41px] h-[40px] bg-sky-100 dark:bg-slate-900 rounded-md"
    target="_blank"
    href={link}
  >
    <i class={svg}></i><span class="px-1 hidden md:inline">{text}</span>
  </a>
</button>
