---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="contact" class="w-10/12 lg:w-[700px] md:w-[650px] mx-auto pt-48">
  <div class="flex items-center">
    <h3
      class="sm:text-4xl text-3xl font-bold pb-11 text-blue-900 dark:text-white"
    >
      <span
        class="sm:text-4xl text-3xl text-indigo-600 dark:text-cyan-300 drop-shadow-[0_2px_2px_rgba(79,70,229,0.3)] dark:drop-shadow-[0_2px_2px_rgba(103,232,249,0.3)] font-inconsolata-var"
        >04.</span
      >
      <span>{t("contact.title")}</span>
    </h3>
  </div>
  <div class="flex flex-col items-center">
    <p class="pb-12 text-lg text-blue-900 dark:text-white">
      {t("contact.text.one")}<span
        class="text-indigo-600 dark:text-cyan-300 drop-shadow-[0_2px_2px_rgba(79,70,229,0.3)] dark:drop-shadow-[0_2px_2px_rgba(103,232,249,0.3)]"
        >{t("contact.text.two")}</span
      >{t("contact.text.three")}<span
        class="text-indigo-600 dark:text-cyan-300 drop-shadow-[0_2px_2px_rgba(79,70,229,0.3)] dark:drop-shadow-[0_2px_2px_rgba(103,232,249,0.3)]"
        >{t("contact.text.four")}</span
      >!
    </p>
    <a
      class="gradient-button bg-gradient-to-r from-cyan-300 to-indigo-400 text-gray-800 font-bold sm:py-5 sm:px-9 sm:text-lg text-xs py-5 px-4 rounded inline-flex items-center"
      href="mailto:juani.battiston2002@gmail.com"
    >
      <i class="fa-regular fa-envelope fa-xl text-blue-900 dark:text-black"></i>
      <span class="px-2 text-blue-900 dark:text-black"
        >{t("contact.button")}</span
      >
    </a>
  </div>
</div>
