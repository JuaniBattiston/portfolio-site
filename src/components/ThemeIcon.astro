---
import Sun from "../../public/Sun.astro";
import Moon from "../../public/Moon.astro";
---

<button id="themeToggle">
  <Sun
    id="light"
    class="theme-toggle-icon hover:stroke-indigo-600 hover:drop-shadow-[0_2px_2px_rgba(79,70,229,0.3)]"
  />
  <Moon
    id="dark"
    class="theme-toggle-icon hover:stroke-cyan-300 hover:drop-shadow-[0_2px_2px_rgba(103,232,249,0.3)]"
  />
</button>

<style>
  #light,
  #dark {
    display: none;
  }

  .light #dark {
    display: none;
  }

  .dark #light {
    display: none;
  }

  .theme-toggle-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  .theme-toggle-icon {
    transition: transform 0.3s ease-in-out;
  }

  .theme-toggle-icon:hover {
    transform: scale(1.2);
  }

  .theme-toggle-icon:not(:hover) {
    transform: scale(1);
  }
</style>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }

  window.localStorage.setItem("theme", theme);

  const lightIcon = document.getElementById("light");
  const darkIcon = document.getElementById("dark");
  if (theme === "light") {
    darkIcon.style.display = "none";
    lightIcon.style.display = "inline-block";
  } else {
    lightIcon.style.display = "none";
    darkIcon.style.display = "inline-block";
  }

  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");

    if (isDark) {
      darkIcon.style.display = "inline-block";
      lightIcon.style.display = "none";
    } else {
      lightIcon.style.display = "inline-block";
      darkIcon.style.display = "none";
    }
  };

  document
    .getElementById("themeToggle")
    .addEventListener("click", handleToggleClick);
</script>
