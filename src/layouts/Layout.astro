---
import "@fontsource-variable/inconsolata";
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/fav.ico" />
    <script
      src="https://kit.fontawesome.com/95c085f604.js"
      crossorigin="anonymous"></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/@alpinejs/focus@3.x.x/dist/cdn.min.js"
    ></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen font-onest top-0 z-[-2] w-screen bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(0,163,255,0.1),rgba(0,163,255,0.1))] dark:bg-slate-900 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(30,58,138,0.7),rgba(15,23,42,0.7))]"
  >
  
    <slot />
  </body>
</html>
<style is:global>
  [x-cloak] {
    display: none !important;
    color: rgba(0,163,255,0.2);
    color: rgba(0,163,255,0);
    color: rgba(0,163,255,0);
  }


  .gradient-text {
    background: linear-gradient(
      to right,
      #2563eb,
      #67e8f9,
      #818cf8,
      #67e8f9,
      #2563eb,
      #67e8f9,
      #818cf8
    );
    background-size: 300% 300%;
    background-clip: text;
    animation: gradient 14s linear infinite;
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }

  .gradient-button:hover {
    transform: translate(-3.5px, -3.5px);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: #437bf3 3.5px 3.5px 0px;
    background: linear-gradient(to right, #67e8f9, #818cf8, #67e8f9, #818cf8);
    background-size: 300% 300%;
    animation: gradient 10s linear infinite;
  }

  .gradient-tag {
    background: linear-gradient(to right, #67e8f9, #818cf8, #67e8f9, #818cf8);
    background-size: 300% 300%;
    animation: gradient 10s linear infinite;
  }

  .gradient-tag:hover {
    transform: translate(-3.5px, -3.5px);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: #437bf3 3.5px 3.5px 0px;
  }

  .highlighted-text {
    color: #4f46e5;

    --tw-drop-shadow: drop-shadow(0 2px 2px rgba(181, 103, 249, 0.3));
    filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast)
      var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert)
      var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
  }

  @media (prefers-color-scheme: dark) {
    .highlighted-text {
    color: rgba(103, 232, 249, 1);

    --tw-drop-shadow: drop-shadow(0 2px 2px rgba(103, 232, 249, 0.3));
    filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast)
      var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert)
      var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
    }
  }
  
</style>